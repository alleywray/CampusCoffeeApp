<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/coffee_background2"
    tools:context="com.example.campuscoffeeapp.MainActivity" >

    <ImageButton
        android:id="@+id/johnnie_java_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/clemens_perk"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/johnnie_java_button" />

    <ImageButton
        android:id="@+id/clemens_perk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/clemens_perk" />

</RelativeLayout>
